<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.ngd.order.equipment_management_system.mapper.EquipmentRepairMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="edu.ngd.order.equipment_management_system.entity.EquipmentRepair">
        <id column="id" property="id" />
        <result column="equipment_id" property="equipmentId" />
        <result column="fault_code_id" property="faultCodeId" />
        <result column="repair_date" property="repairDate" />
        <result column="repair_person" property="repairPerson" />
        <result column="repair_items" property="repairItems" />
        <result column="repair_result" property="repairResult" />
        <result column="repair_cost" property="repairCost" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, equipment_id, fault_code_id, repair_date, repair_person, repair_items, repair_result, 
        repair_cost, description, create_time, update_time
    </sql>
    
    <!-- 插入语句 -->
    <insert id="insert" parameterType="edu.ngd.order.equipment_management_system.entity.EquipmentRepair" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO equipment_repair (
            equipment_id, fault_code_id, repair_date, repair_person, repair_items, repair_result, 
            repair_cost, description, create_time, update_time
        ) VALUES (
            #{equipmentId}, #{faultCodeId}, #{repairDate}, #{repairPerson}, #{repairItems}, #{repairResult}, 
            #{repairCost}, #{description}, NOW(), NOW()
        )
    </insert>
    
    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM equipment_repair
        WHERE id = #{id}
    </select>
    
    <!-- 查询列表 -->
    <select id="selectList" parameterType="edu.ngd.order.equipment_management_system.entity.EquipmentRepair" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM equipment_repair
        <where>
            <if test="equipmentId != null">
                AND equipment_id = #{equipmentId}
            </if>
            <if test="faultCodeId != null">
                AND fault_code_id = #{faultCodeId}
            </if>
            <if test="repairPerson != null and repairPerson != ''">
                AND repair_person LIKE CONCAT('%', #{repairPerson}, '%')
            </if>
            <if test="repairResult != null and repairResult != ''">
                AND repair_result = #{repairResult}
            </if>
        </where>
        ORDER BY repair_date DESC
    </select>
    
    <!-- 更新语句 -->
    <update id="updateById" parameterType="edu.ngd.order.equipment_management_system.entity.EquipmentRepair">
        UPDATE equipment_repair
        <set>
            <if test="equipmentId != null">
                equipment_id = #{equipmentId},
            </if>
            <if test="faultCodeId != null">
                fault_code_id = #{faultCodeId},
            </if>
            <if test="repairDate != null">
                repair_date = #{repairDate},
            </if>
            <if test="repairPerson != null and repairPerson != ''">
                repair_person = #{repairPerson},
            </if>
            <if test="repairItems != null and repairItems != ''">
                repair_items = #{repairItems},
            </if>
            <if test="repairResult != null and repairResult != ''">
                repair_result = #{repairResult},
            </if>
            <if test="repairCost != null">
                repair_cost = #{repairCost},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 删除语句 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM equipment_repair
        WHERE id = #{id}
    </delete>
</mapper>