<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.ngd.order.equipment_management_system.mapper.EquipmentInspectionMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="edu.ngd.order.equipment_management_system.entity.EquipmentInspection">
        <id column="id" property="id" />
        <result column="equipment_id" property="equipmentId" />
        <result column="inspection_date" property="inspectionDate" />
        <result column="inspector" property="inspector" />
        <result column="inspection_items" property="inspectionItems" />
        <result column="inspection_result" property="inspectionResult" />
        <result column="problem_description" property="problemDescription" />
        <result column="handling_suggestion" property="handlingSuggestion" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, equipment_id, inspection_date, inspector, inspection_items, inspection_result, 
        problem_description, handling_suggestion, create_time, update_time
    </sql>
    
    <!-- 插入语句 -->
    <insert id="insert" parameterType="edu.ngd.order.equipment_management_system.entity.EquipmentInspection" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO equipment_inspection (
            equipment_id, inspection_date, inspector, inspection_items, inspection_result, 
            problem_description, handling_suggestion, create_time, update_time
        ) VALUES (
            #{equipmentId}, #{inspectionDate}, #{inspector}, #{inspectionItems}, #{inspectionResult}, 
            #{problemDescription}, #{handlingSuggestion}, NOW(), NOW()
        )
    </insert>
    
    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM equipment_inspection
        WHERE id = #{id}
    </select>
    
    <!-- 查询列表 -->
    <select id="selectList" parameterType="edu.ngd.order.equipment_management_system.entity.EquipmentInspection" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM equipment_inspection
        <where>
            <if test="equipmentId != null">
                AND equipment_id = #{equipmentId}
            </if>
            <if test="inspector != null and inspector != ''">
                AND inspector LIKE CONCAT('%', #{inspector}, '%')
            </if>
            <if test="inspectionResult != null and inspectionResult != ''">
                AND inspection_result = #{inspectionResult}
            </if>
        </where>
        ORDER BY inspection_date DESC
    </select>
    
    <!-- 更新语句 -->
    <update id="updateById" parameterType="edu.ngd.order.equipment_management_system.entity.EquipmentInspection">
        UPDATE equipment_inspection
        <set>
            <if test="equipmentId != null">
                equipment_id = #{equipmentId},
            </if>
            <if test="inspectionDate != null">
                inspection_date = #{inspectionDate},
            </if>
            <if test="inspector != null and inspector != ''">
                inspector = #{inspector},
            </if>
            <if test="inspectionItems != null and inspectionItems != ''">
                inspection_items = #{inspectionItems},
            </if>
            <if test="inspectionResult != null and inspectionResult != ''">
                inspection_result = #{inspectionResult},
            </if>
            <if test="problemDescription != null and problemDescription != ''">
                problem_description = #{problemDescription},
            </if>
            <if test="handlingSuggestion != null and handlingSuggestion != ''">
                handling_suggestion = #{handlingSuggestion},
            </if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 删除语句 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM equipment_inspection
        WHERE id = #{id}
    </delete>
</mapper>