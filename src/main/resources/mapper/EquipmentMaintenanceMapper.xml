<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.ngd.order.equipment_management_system.mapper.EquipmentMaintenanceMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="edu.ngd.order.equipment_management_system.entity.EquipmentMaintenance">
        <id column="id" property="id" />
        <result column="equipment_id" property="equipmentId" />
        <result column="maintenance_date" property="maintenanceDate" />
        <result column="maintenance_type" property="maintenanceType" />
        <result column="maintenance_items" property="maintenanceItems" />
        <result column="maintenance_person" property="maintenancePerson" />
        <result column="maintenance_result" property="maintenanceResult" />
        <result column="next_maintenance_date" property="nextMaintenanceDate" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, equipment_id, maintenance_date, maintenance_type, maintenance_items, maintenance_person, 
        maintenance_result, next_maintenance_date, description, create_time, update_time
    </sql>
    
    <!-- 插入语句 -->
    <insert id="insert" parameterType="edu.ngd.order.equipment_management_system.entity.EquipmentMaintenance" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO equipment_maintenance (
            equipment_id, maintenance_date, maintenance_type, maintenance_items, maintenance_person, 
            maintenance_result, next_maintenance_date, description, create_time, update_time
        ) VALUES (
            #{equipmentId}, #{maintenanceDate}, #{maintenanceType}, #{maintenanceItems}, #{maintenancePerson}, 
            #{maintenanceResult}, #{nextMaintenanceDate}, #{description}, NOW(), NOW()
        )
    </insert>
    
    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM equipment_maintenance
        WHERE id = #{id}
    </select>
    
    <!-- 查询列表 -->
    <select id="selectList" parameterType="edu.ngd.order.equipment_management_system.entity.EquipmentMaintenance" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM equipment_maintenance
        <where>
            <if test="equipmentId != null">
                AND equipment_id = #{equipmentId}
            </if>
            <if test="maintenanceType != null and maintenanceType != ''">
                AND maintenance_type = #{maintenanceType}
            </if>
            <if test="maintenancePerson != null and maintenancePerson != ''">
                AND maintenance_person LIKE CONCAT('%', #{maintenancePerson}, '%')
            </if>
        </where>
        ORDER BY maintenance_date DESC
    </select>
    
    <!-- 更新语句 -->
    <update id="updateById" parameterType="edu.ngd.order.equipment_management_system.entity.EquipmentMaintenance">
        UPDATE equipment_maintenance
        <set>
            <if test="equipmentId != null">
                equipment_id = #{equipmentId},
            </if>
            <if test="maintenanceDate != null">
                maintenance_date = #{maintenanceDate},
            </if>
            <if test="maintenanceType != null and maintenanceType != ''">
                maintenance_type = #{maintenanceType},
            </if>
            <if test="maintenanceItems != null and maintenanceItems != ''">
                maintenance_items = #{maintenanceItems},
            </if>
            <if test="maintenancePerson != null and maintenancePerson != ''">
                maintenance_person = #{maintenancePerson},
            </if>
            <if test="maintenanceResult != null and maintenanceResult != ''">
                maintenance_result = #{maintenanceResult},
            </if>
            <if test="nextMaintenanceDate != null">
                next_maintenance_date = #{nextMaintenanceDate},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 删除语句 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM equipment_maintenance
        WHERE id = #{id}
    </delete>
</mapper>