<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.ngd.order.equipment.maintenance.mapper.EquipmentMaintenanceMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="edu.ngd.order.equipment.maintenance.entity.EquipmentMaintenance">
        <id column="ID" property="id" />
        <result column="MaintainNumber" property="maintainNumber" />
        <result column="EnableStatus" property="enableStatus" />
        <result column="OperateEndTime" property="operateEndTime" />
        <result column="OperateStartTime" property="operateStartTime" />
        <result column="DeviceType" property="deviceType" />
        <result column="EquipmentNumber" property="equipmentNumber" />
        <result column="MaintainUser" property="maintainUser" />
        <result column="Status" property="status" />
        <result column="StartTime" property="startTime" />
        <result column="EndTime" property="endTime" />
        <result column="BarCode" property="barCode" />
        <result column="MaintainResult" property="maintainResult" />
        <result column="EquipmentName" property="equipmentName" />
        <result column="MaintainDept" property="maintainDept" />
    </resultMap>
    
    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        ID, MaintainNumber, EnableStatus, OperateEndTime, OperateStartTime, 
        DeviceType, EquipmentNumber, MaintainUser, Status, StartTime, EndTime, 
        BarCode, MaintainResult, EquipmentName, MaintainDept
    </sql>
    
    <!-- 插入语句 -->
    <insert id="insert" parameterType="edu.ngd.order.equipment.maintenance.entity.EquipmentMaintenance" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO Cxr_EquipmentMaintain (
            MaintainNumber, EnableStatus, OperateEndTime, OperateStartTime, 
            DeviceType, EquipmentNumber, MaintainUser, Status, StartTime, EndTime, 
            BarCode, MaintainResult, EquipmentName, MaintainDept
        ) VALUES (
            #{maintainNumber}, #{enableStatus}, #{operateEndTime}, #{operateStartTime}, 
            #{deviceType}, #{equipmentNumber}, #{maintainUser}, #{status}, #{startTime}, #{endTime}, 
            #{barCode}, #{maintainResult}, #{equipmentName}, #{maintainDept}
        )
    </insert>
    
    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM Cxr_EquipmentMaintain
        WHERE ID = #{id}
    </select>
    
    <!-- 查询列表 -->
    <select id="selectList" parameterType="edu.ngd.order.equipment.maintenance.entity.EquipmentMaintenance" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM Cxr_EquipmentMaintain
        <where>
            <if test="equipmentNumber != null and equipmentNumber != '' or equipmentName != null and equipmentName != ''">
                AND (
                    <if test="equipmentNumber != null and equipmentNumber != ''">
                        EquipmentNumber LIKE CONCAT('%', #{equipmentNumber}, '%')
                    </if>
                    <if test="equipmentNumber != null and equipmentNumber != '' and equipmentName != null and equipmentName != ''">
                        OR
                    </if>
                    <if test="equipmentName != null and equipmentName != ''">
                        EquipmentName LIKE CONCAT('%', #{equipmentName}, '%')
                    </if>
                )
            </if>
            <if test="maintainUser != null and maintainUser != ''">
                AND MaintainUser LIKE CONCAT('%', #{maintainUser}, '%')
            </if>
        </where>
        ORDER BY StartTime DESC
    </select>
    
    <!-- 更新语句 -->
    <update id="updateById" parameterType="edu.ngd.order.equipment.maintenance.entity.EquipmentMaintenance">
        UPDATE Cxr_EquipmentMaintain
        <set>
            <if test="maintainNumber != null and maintainNumber != ''">
                MaintainNumber = #{maintainNumber},
            </if>
            <if test="enableStatus != null and enableStatus != ''">
                EnableStatus = #{enableStatus},
            </if>
            <if test="operateEndTime != null">
                OperateEndTime = #{operateEndTime},
            </if>
            <if test="operateStartTime != null">
                OperateStartTime = #{operateStartTime},
            </if>
            <if test="deviceType != null and deviceType != ''">
                DeviceType = #{deviceType},
            </if>
            <if test="equipmentNumber != null and equipmentNumber != ''">
                EquipmentNumber = #{equipmentNumber},
            </if>
            <if test="maintainUser != null and maintainUser != ''">
                MaintainUser = #{maintainUser},
            </if>
            <if test="status != null and status != ''">
                Status = #{status},
            </if>
            <if test="startTime != null">
                StartTime = #{startTime},
            </if>
            <if test="endTime != null">
                EndTime = #{endTime},
            </if>
            <if test="barCode != null and barCode != ''">
                BarCode = #{barCode},
            </if>
            <if test="maintainResult != null and maintainResult != ''">
                MaintainResult = #{maintainResult},
            </if>
            <if test="equipmentName != null and equipmentName != ''">
                EquipmentName = #{equipmentName},
            </if>
            <if test="maintainDept != null and maintainDept != ''">
                MaintainDept = #{maintainDept},
            </if>
        </set>
        WHERE ID = #{id}
    </update>
    
    <!-- 删除语句 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM Cxr_EquipmentMaintain
        WHERE ID = #{id}
    </delete>
</mapper>