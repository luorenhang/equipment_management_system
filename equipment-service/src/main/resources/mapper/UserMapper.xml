<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.ngd.order.equipment.mapper.UserMapper">
    <!-- 结果集映射 -->
    <resultMap id="BaseResultMap" type="edu.ngd.order.equipment.entity.User">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="email" property="email" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="creator" property="creator" jdbcType="VARCHAR" />
        <result column="last_update_time" property="lastUpdateTime" jdbcType="TIMESTAMP" />
        <result column="modifier" property="modifier" jdbcType="VARCHAR" />
    </resultMap>
    
    <!-- 新增用户 -->
    <insert id="insert" parameterType="edu.ngd.order.equipment.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
            username,
            password,
            email,
            create_time,
            creator,
            last_update_time,
            modifier
        ) VALUES (
            #{username,jdbcType=VARCHAR},
            #{password,jdbcType=VARCHAR},
            #{email,jdbcType=VARCHAR},
            NOW(),
            #{creator,jdbcType=VARCHAR},
            NOW(),
            #{modifier,jdbcType=VARCHAR}
        )
    </insert>
    
    <!-- 根据ID删除用户 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM user WHERE id = #{id,jdbcType=INTEGER}
    </delete>
    
    <!-- 更新用户信息 -->
    <update id="update" parameterType="edu.ngd.order.equipment.entity.User">
        UPDATE user SET
            username = #{username,jdbcType=VARCHAR},
            password = #{password,jdbcType=VARCHAR},
            email = #{email,jdbcType=VARCHAR},
            last_update_time = NOW(),
            modifier = #{modifier,jdbcType=VARCHAR}
        WHERE id = #{id,jdbcType=INTEGER}
    </update>
    
    <!-- 根据ID查询用户 -->
    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT
            id,
            username,
            password,
            email,
            create_time,
            creator,
            last_update_time,
            modifier
        FROM user
        WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
            id,
            username,
            password,
            email,
            create_time,
            creator,
            last_update_time,
            modifier
        FROM user
        WHERE username = #{username,jdbcType=VARCHAR}
    </select>
    
    <!-- 根据邮箱查询用户 -->
    <select id="selectByEmail" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
            id,
            username,
            password,
            email,
            create_time,
            creator,
            last_update_time,
            modifier
        FROM user
        WHERE email = #{email,jdbcType=VARCHAR}
    </select>
    
    <!-- 查询所有用户 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
            id,
            username,
            password,
            email,
            create_time,
            creator,
            last_update_time,
            modifier
        FROM user
    </select>
</mapper>